@model StudentsProfileApplication.ViewModels.StudentViewModel;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center bg-light p-3">Edit student Data</h2>
<hr />

<div class="container bg-light p-3" style="width:70%">
    <div style="height: 400px;">
        <form asp-action="SaveChanges" method="post" asp-route-id="StudentId">
            <input type="hidden" asp-for="StudentId" />
            <div class="form-group row mb-3">
                <div class="col-sm-6 ">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">First Name:</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="FirstName" name="FirstName" value="Craig">
                            <span class="text-danger field-validation-valid" data-valmsg-for="FirstName" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <!-- Second Column: LastName -->
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Last Name:</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="LastName" name="LastName" value="Smith">
                            <span class="text-danger field-validation-valid" data-valmsg-for="LastName" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 ">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Html.DisplayNameFor(m=>m.DateOfBirth) :</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(m => m.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })<br />
                            @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Html.DisplayNameFor(m=>m.EnrollmentDate) :</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(m => m.EnrollmentDate, new { htmlAttributes = new { @class = "form-control" } })<br />
                            @Html.ValidationMessageFor(m => m.EnrollmentDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 ">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Html.DisplayNameFor(m=>m.Street) :</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(m => m.Street, new { htmlAttributes = new { @class = "form-control" } })<br />
                            @Html.ValidationMessageFor(m => m.Street, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Html.DisplayNameFor(m=>m.City) :</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(m => m.City, new { htmlAttributes = new { @class = "form-control" } })<br />
                            @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 ">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Html.DisplayNameFor(m=>m.State) :</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(m => m.State, new { htmlAttributes = new { @class = "form-control" } })<br />
                            @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Html.DisplayNameFor(m=>m.PostalCode) :</label>
                        <div class="col-sm-8">
                            @Html.EditorFor(m => m.PostalCode, new { htmlAttributes = new { @class = "form-control" } })<br />
                            @Html.ValidationMessageFor(m => m.PostalCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">@Html.DisplayNameFor(m=>m.DepartmentID) :</label>
                        <div class="col-sm-8">
                            <select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.DepartmentID">
                                <option value="">-- select --</option>
                            </select>
                            <span asp-validation-for="DepartmentID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-check-label">ScholarShip</label>
                        <div class="col-sm-8">
                            @Html.CheckBoxFor(m => m.HasScholarShip, new { htmlAttributes = new { @class = "form-check-input" } })<br />
                            @Html.ValidationMessageFor(m => m.HasScholarShip, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                
            </div>
            @* <div>
                @Html.DropDownList("DepartmentID", ViewData["DepartmentID"] as SelectList, "-- select --", new { @class = "form-control" })
                <span asp-validation-for="DepartmentID" class="text-danger"></span>
            </div> *@
            <div class="form-group row col-sm-12">
                <div class="form-group row col-sm-2">
                    <a asp-action="Index">Back to List</a>
                </div>
                <div class=" text-center">
                    <input type="submit" value="Save" asp-action="SaveChanges" as-route-id="@Model.StudentId" class="btn btn-primary mx-auto" />
                </div>
            </div>
            
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
                }


